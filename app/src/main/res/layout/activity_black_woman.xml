            android:textColor="@color/neonblue"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ruby" />

        <ImageView
            android:id="@+id/runby"
            android:tooltipText="Best matches with Light creamy, black, Yellow"
            android:layout_width="match_parent"
            android:layout_height="86dp"
            android:background="@drawable/ruby"
            tools:layout_editor_absoluteX="3dp"
            tools:layout_editor_absoluteY="239dp" />

        <TextView
            android:id="@+id/textView21"

            android:textStyle="bold"
            android:textColor="@color/neonblue"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fuchsia" />

        <ImageView
            android:id="@+id/fuchia"
            android:tooltipText="Best matches with Orange skirt , light blue jeans "
            android:layout_width="match_parent"
            android:layout_height="86dp"
            android:background="@drawable/fuchsia"
            tools:layout_editor_absoluteX="3dp"
            tools:layout_editor_absoluteY="239dp" />

        <TextView
            android:id="@+id/textView22"
            android:textStyle="bold"
            android:textColor="@color/neonblue"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Royal Blue" />

        <ImageView
            android:id="@+id/rb"
            android:tooltipText="Best matches with Mustard, white, yellow, maroon, grey  "
            android:layout_width="match_parent"
            android:layout_height="86dp"
            android:background="@drawable/royal_blue"
            tools:layout_editor_absoluteX="3dp"
            tools:layout_editor_absoluteY="239dp" />

        <TextView
            android:id="@+id/textView23"
            android:textStyle="bold"
            android:textColor="@color/neonblue"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Blush" />

        <ImageView
            android:id="@+id/blush"
            android:tooltipText="Best matches with White pant,  black, light blue"
            android:layout_width="match_parent"
            android:layout_height="86dp"
            android:background="@drawable/blush"
            tools:layout_editor_absoluteX="3dp"
            tools:layout_editor_absoluteY="239dp" />

    </LinearLayout>
    </FrameLayout>





</ScrollView>