<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".services"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/butgms"
            android:layout_width="match_parent"

            android:layout_height="91dp"



            android:layout_marginLeft="5dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/ic_bw_button"
            android:text="things we take care of"
            android:textAlignment="center"
            android:textColor="@color/neonblue"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bt1"
            android:layout_width="wrap_content"
            android:layout_height="103dp"

            android:layout_margin="5dp"
            android:background="@drawable/ic_bw_button"
            android:text="Matching Clothes According Your Skin TONE"

            android:textAlignment="center"
            android:textColor="@color/neonblue"            android:textSize="14sp" />

        <Button
            android:id="@+id/bt2"
            android:layout_width="match_parent"
            android:layout_height="103dp"
            android:layout_margin="5dp"
            android:background="@drawable/ic_bw_button"
            android:text="  List of Matching Clothes"
            android:textAlignment="center"
            android:textColor="@color/neonblue"            android:textSize="18sp" />

        <Button
            android:id="@+id/bt4"
            android:layout_width="match_parent"
            android:layout_height="103dp"

            android:layout_margin="5dp"
            android:background="@drawable/ic_bw_button"
            android:text="clothes suggestions "
            android:textAlignment="center"
            android:textColor="@color/neonblue"            android:textSize="18sp" />

        <Button
            android:id="@+id/bt5"
            android:layout_width="match_parent"
            android:layout_height="103dp"

            android:layout_margin="5dp"
            android:background="@drawable/ic_bw_button"
            android:text="Suitable bottom Wear With UperWear "
            android:textAlignment="center"
            android:textColor="@color/neonblue"
            android:textSize="15sp" />
        <Button
            android:id="@+id/bt6"
            android:layout_width="match_parent"
            android:layout_height="103dp"


            android:layout_margin="5dp"
            android:background="@drawable/ic_bw_button"
            android:text="Easy Shopping on E-commerce Website "
            android:textAlignment="center"
            android:textColor="@color/neonblue"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/text" />


    </LinearLayout>


</RelativeLayout>