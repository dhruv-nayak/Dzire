<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".covd"
    android:background="@color/gb2">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical"
            android:layout_gravity="center">

            <!--Text view to display Global stats-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Global Stats"
                android:textColor="@color/neonblue"
                android:textAllCaps="true"
                android:textAlignment="center"
                android:textSize="35sp"
                android:textStyle="bold"/>

            <!--Text view to display Total Cases-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:layout_marginTop="20dp"
                android:text="Total Cases"
                android:textColor="@color/neonblue1"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="30sp"/>

            <!--Text view to display the updated number when data
            will fetch from the API. For now default set to 0 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/neonblue"

                android:id="@+id/tvCases"
                android:textAlignment="center"
                android:textSize="25sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-light" />

            <!--Text view to display Recovered Cases-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:text="Recovered"
                android:textColor="@color/neonblue1"

                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="30sp"/>

            <!--Text view to display the updated number when data
            will fetch from the API. For now default set to 0 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/neonblue"

                android:id="@+id/tvRecovered"
                android:textAlignment="center"
                android:textSize="25sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-light" />

            <!--Text view to display Critical Cases-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:text="Critical"
                android:textColor="@color/neonblue1"

                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="30sp"/>

            <!--Text view to display the updated number when data
            will fetch from the API. For now default set to 0 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/tvCritical"
                android:textAlignment="center"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/neonblue"

                android:fontFamily="sans-serif-light" />

            <!--Text view to display Active Cases-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:text="Active"
                android:textColor="@color/neonblue1"

                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="30sp"/>

            <!--Text view to display the updated number when data
            will fetch from the API. For now default set to 0 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/tvActive"
                android:textAlignment="center"
                android:textColor="@color/neonblue"

                android:textSize="25sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-light" />

            <!--Text view to display Today Cases-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:text="Today Cases"
                android:textColor="@color/neonblue1"

                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="30sp"/>

            <!--Text view to display the updated number when data
            will fetch from the API. For now default set to 0 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/tvTodayCases"
                android:textAlignment="center"
                android:textColor="@color/neonblue"

                android:textSize="25sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-light" />







            <!--Text view to display Affected Countries-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:text="Affected Countries"
                android:textAlignment="center"
                android:textColor="@color/neonblue1"

                android:textStyle="bold"
                android:textSize="30sp"/>

            <!--Text view to display the updated number when data
            will fetch from the API. For now default set to 0 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/tvAffectedCountries"
                android:textAlignment="center"
                android:textSize="25sp"
                android:textColor="@color/neonblue"

                android:textStyle="bold"
                android:fontFamily="sans-serif-light" />

        </LinearLayout>




</ScrollView>