<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout3"
    android:layout_width="350dp"
    android:orientation="vertical"
    android:background="@color/common_google_signin_btn_text_light_pressed"

    android:layout_height="600dp"
    android:layout_gravity="center"
>

    <ImageView
        android:id="@+id/tb"

        android:layout_width="332dp"
        android:layout_height="74dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="215dp"
        android:backgroundTint="@color/common_google_signin_btn_text_light"
        android:src="@drawable/lightb"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/td"
        android:layout_width="329dp"
        android:layout_height="74dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="455dp"

        android:backgroundTint="@color/common_google_signin_btn_text_light"
        android:src="@drawable/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="48dp"
        android:text="TYPE-A"
        android:textSize="20dp"
        android:gravity="center"
        android:background="#80FF84"
        android:textStyle="bold"
      />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
android:textSize="20dp"
        android:layout_marginTop="424dp"
        android:background="#80FF84"
        android:gravity="center"
        android:text="TYPE-D"
        android:textStyle="bold"
        />

    <ImageView
        android:id="@+id/tc"
        android:layout_width="328dp"
        android:layout_height="71dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="336dp"

        android:backgroundTint="@color/common_google_signin_btn_text_light"
        android:src="@drawable/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginTop="296dp"
        android:text="TYPE-C"
        android:gravity="center"
        android:background="#80FF84"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
android:textSize="20dp"
        android:layout_marginTop="176dp"
        android:text="TYPE-B"
        android:gravity="center"
        android:background="#80FF84"
        android:textStyle="bold"
         />

    <ImageView
        android:id="@+id/ta"
        android:layout_width="329dp"
        android:layout_height="71dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="80dp"


        android:backgroundTint="@color/common_google_signin_btn_text_light"
        android:src="@drawable/brown"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/close"


        android:layout_width="54dp"
        android:layout_height="28dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/ic_bw_button"
        android:gravity="center"
        android:text="X"
        android:textColor="@color/neonblue"
        android:textStyle="bold" />


</RelativeLayout>