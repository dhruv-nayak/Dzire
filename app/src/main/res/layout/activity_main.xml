<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/logintext"


    tools:context=".MainActivity"
   >


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
           android:background="@color/fabback"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="10dp"
             >

            <ImageView
                android:id="@+id/dt"
                android:layout_width="wrap_content"
                android:layout_height="73dp"
                android:layout_centerInParent="true"
                android:layout_marginStart="16dp"
                android:elevation="20dp"
                android:src="@drawable/text"
                android:layout_marginEnd="10dp"
                android:layout_gravity="center_horizontal"

                android:text="Covid Tracker"
                android:textAlignment="center"
                android:textColor="@color/neonblue"
                android:textSize="17dp"



                app:layout_constraintHorizontal_bias="1.0"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/toolbar" />

        </androidx.appcompat.widget.Toolbar>









        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_centerInParent="true">


            <Button
                android:id="@+id/manual"
                android:layout_width="match_parent"
                android:layout_height="69dp"

                android:layout_centerHorizontal="true"


                android:layout_centerVertical="true"

                android:background="@drawable/ic_bw_button"
                android:text="Gender"
                android:textColor="@color/neonblue"
                android:textSize="15sp" />


            <Button
                android:id="@+id/buttonex"
                android:layout_width="match_parent"
                android:layout_height="69dp"


                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="9dp"
                android:background="@drawable/ic_bw_button"
                android:shadowColor="@color/neonblue"
                android:text="Upload Photo"
                android:textColor="@color/neonblue"
                android:textSize="15sp" />






                    <Button
                        android:id="@+id/buttonpos"
                        android:layout_width="400dp"
                        android:layout_height="69dp"

                        android:layout_centerInParent="true"
                        android:background="@drawable/ic_bw_button"
                        android:text="Skin Tone"
                        android:textColor="@color/neonblue"
                        android:textSize="15sp" />


        </LinearLayout>




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
      android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_margin="8dp"
>

        <Button
            android:id="@+id/btnabt"
            android:layout_width="100dp"
            android:layout_height="94dp"
            android:layout_alignParentTop="true"
            android:padding="10dp"
            android:layout_centerInParent="true"
            android:background="@drawable/ic_abou" />

        <Button
            android:id="@+id/btnser"
            android:layout_width="100dp"
            android:layout_height="94dp"
            android:padding="10dp"

            android:background="@drawable/ic_serv" />

        <Button
            android:id="@+id/btncon"
            android:layout_width="100dp"
            android:layout_height="94dp"
            android:layout_alignParentEnd="true"
            android:padding="10dp"

            android:background="@drawable/ic_cont" />
    </RelativeLayout>


</RelativeLayout>






















